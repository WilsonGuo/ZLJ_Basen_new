<?xml version="1.0" encoding="utf-8"?>
<FrameLayout 
    android:gravity="center_horizontal" 
    android:orientation="vertical" 
    android:background="@drawable/gb_w" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    
  xmlns:android="http://schemas.android.com/apk/res/android">
  
    
    <RelativeLayout 
        android:id="@+id/title_layout" 
        android:layout_width="fill_parent" 
        android:layout_gravity="top"
        android:layout_marginTop="2dip"
        android:layout_height="40.0dip">
        
     
  <!--        
        <TextView 
            android:textSize="14.0sp" 
            android:textColor="@color/color_gray" 
            android:id="@+id/location_text" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_marginRight="10.0dip" 
            android:text="@string/get_weather" 
            android:layout_alignParentRight="true" 
            android:layout_centerVertical="true" />
-->            
    </RelativeLayout>
    
    <Button 
        android:textSize="16.0sp" 
        android:textColor="@color/color_standby" 
        android:gravity="center" 
        android:id="@+id/btn_open" 
        android:background="@drawable/open_selector" 
        android:paddingTop="50.0dip" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"  
        android:layout_gravity="center"
        android:text="@string/click_open" />
    
    <LinearLayout 
		android:gravity="center_horizontal" 
	    android:orientation="vertical"  
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:layout_gravity="bottom"
	    android:layout_marginTop="10dip"
	    android:visibility="gone"
	    android:layout_marginBottom="20dip">
        
	    <TextView 
	        android:textSize="14.0sp" 
	        android:textColor="@color/color_gray" 
	        android:id="@+id/location_pm" 
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content" 
	        android:layout_marginTop="20.0dip" 
	        android:text="@string/get_weather" />
	    
	    <TextView android:textSize="46.0sp" 
	        android:textColor="@color/color_standby" 
	        android:id="@+id/pm" 
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content" 
	        android:layout_marginTop="10.0dip" />
	    
	    <TextView 
	        android:textSize="20.0sp" 
	        android:textColor="@color/color_standby" 
	        android:id="@+id/pm_value" 
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content" />
    </LinearLayout>
    
</FrameLayout>