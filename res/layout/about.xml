<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:gravity="center" android:background="@null" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:gravity="center" 
        android:orientation="vertical" 
        android:background="@drawable/gb_w" 
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent">

        <LinearLayout android:gravity="center" 
            android:orientation="horizontal" 
            android:layout_weight="910.0" 
            style="@style/view_vertical">
            
            <View android:layout_weight="31.0" style="@style/view_horizontal" />
            
            <LinearLayout 
                android:gravity="center" 
                android:orientation="horizontal" 
                android:background="@drawable/about_bg" 
                android:layout_width="0.0dip" 
                android:layout_height="fill_parent" 
                android:layout_weight="578.0">
                
                <LinearLayout 
                    android:gravity="center" 
                    android:orientation="vertical" 
                    android:layout_weight="368.0" 
                    style="@style/view_horizontal">
                    
                    <View android:layout_weight="40.0" 
                        style="@style/view_vertical" />
                    
                    <LinearLayout 
                        android:gravity="center" 
                        android:orientation="horizontal" 
                        android:layout_weight="74.0" 
                        style="@style/view_vertical">
                        
                        <View android:layout_weight="223.0" style="@style/view_horizontal" />
                        
                        <ImageView 
                            android:src="@drawable/logo2" 
                            android:scaleType="fitCenter" 
                            android:layout_weight="400.0" 
                            android:contentDescription="@null" 
                            style="@style/view_horizontal" />
                        
                        <View android:layout_weight="223.0" style="@style/view_horizontal" />
                    </LinearLayout>
                    
                    <View android:layout_weight="20.0" style="@style/view_vertical" />
                    
                    <TextView 
                        android:textSize="@dimen/eighteenSp" 
                        android:textStyle="bold" 
                        android:textColor="@color/gray" 
                        android:gravity="center" 
                        android:text="@string/goodnight_guard" 
                        android:singleLine="true" 
                        android:shadowColor="#ff000000" 
                        android:shadowDx="0.0" 
                        android:shadowDy="-1.0" 
                        android:shadowRadius="1.0" 
                        android:layout_weight="57.0" 
                        style="@style/view_vertical" />
                    
                    <TextView 
                        android:textSize="@dimen/twelveSp" 
                        android:textColor="@color/gray" 
                        android:gravity="center" 
                        android:id="@+id/version_tv" 
                        android:singleLine="true" 
                        android:shadowColor="#ff000000" 
                        android:shadowDx="0.0" 
                        android:shadowDy="-1.0" 
                        android:shadowRadius="1.0" 
                        android:layout_weight="44.0" 
                        style="@style/view_vertical" />
                    
                    <View android:layout_weight="53.0" style="@style/view_vertical" />
                    
                    <ImageView 
                        android:id="@+id/dimensional_iv" 
                        android:background="@null" 
                        android:layout_width="wrap_content" 
                        android:layout_height="0.0dip" 
                        android:src="@drawable/dimensional_code" 
                        android:scaleType="fitCenter" 
                        android:layout_weight="360.0" 
                        android:contentDescription="@null" />
                    
                    <View android:layout_weight="53.0" style="@style/view_vertical" />
                    
                    <Button 
                        android:textSize="@dimen/eighteenSp" 
                        android:textColor="@drawable/color_selector2" 
                        android:id="@+id/checkUpdate_btn" 
                        android:background="@drawable/delete_selector" 
                        android:layout_width="wrap_content" 
                        android:layout_height="0.0dip" 
                        android:text="@string/checkUpdate" 
                        android:layout_weight="79.0" 
                        android:onClick="checkUpdate" />
                    
                    <View android:layout_weight="79.0" style="@style/view_vertical" />
                    
                    <View 
                        android:id="@+id/view" 
                        android:visibility="gone" 
                        android:layout_weight="360.0" 
                        style="@style/view_vertical" />
                </LinearLayout>
            </LinearLayout>
            <View android:layout_weight="31.0" style="@style/view_horizontal" />
        </LinearLayout>
        <View android:layout_weight="100.0" style="@style/view_vertical" />
    </LinearLayout>
</RelativeLayout>